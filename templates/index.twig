{% extends "_layout" %}

{% block content %}
    
<div class="section section--default">
    <div class="container">
        <div class="w-full md:w-3/4">
            {% include '_snippet/_content/_pageTitle' %}
            {% include '_snippet/_content/_intro' %}
        </div>
    </div>
</div>

{% set criteriaquery = craft.app.request.getParam('criteria') %}
{% set domeinenquery = craft.app.request.getParam('domeinen') %}

{# filter topic #}
{% set bronnen = craft.entries.section('bronDetail') %}
{% set relationParam = ['and'] %}

{% if criteriaquery %}
    {% set relationParam = relationParam|merge([{ targetElement: criteriaquery, field: 'criteria' }]) %}
{% endif %}

{# filter articleType #}
{% if domeinenquery %}
    {% set relationParam = relationParam|merge([{ targetElement: domeinenquery, field: 'domeinen' }]) %}
{% endif %}

{% if relationParam|length > 1 %}
    {% set bronnen = bronnen.relatedTo(relationParam) %}
{% endif %}

<div class="section section--default">
    <div class="container">
        <h3 class="text-primary">Criteria</h3>
            {% set criterias = craft.categories.group('criteria').all() %}
        <form>
            {% for criteria in criterias %}
                <input type="checkbox" id="{{ criteria.id }}" name="criteria[]" value="{{ criteria.id }}" {% if criteria.id in criteriaquery %} checked {% endif %}>
                <label for="{{ criteria.id }}">{{ criteria.title }}</label><br>
            {% endfor %}

        <div class="mb-4">
            <h3 class="text-primary">Domeinen</h3>
            {% set domeinen = craft.categories.group('domeinen').all() %}
        <form>
            {% for domein in domeinen %}
                <input type="checkbox" id="{{ domein.id }}" name="domein[]" value="{{ domein.id }}" {% if domein.id in domeinenquery %} checked {% endif %}>
                <label for="{{ domein.id }}">{{ domein.title }}</label><br>
            {% endfor %}
        </div>

            <input class="btn btn--primary" type="submit" value="Filteren">
        </form>
    </div>
</div>

<div class="section section--default">
    <div class="container">
        <div class="flex flex-wrap -mx-3 -mt-8">
            <div class="w-full h-full px-3 mt-8 md:w-1/6">
                {% set bronnen = craft.entries.section('bronDetail') %}
                {% for bron in bronnen %}
                    {% if bron.title|length %}
                        <p class="font-bold">{{ bron.title }}</p>
                    {% endif %}
            </div>

                <div class="w-full h-full px-3 mt-8 md:w-1/6">
                    {% if bron.publicatiejaar|length %}
                        <p>{{ bron.publicatiejaar }}</p>
                    {% endif %}
                </div>

                <div class="w-full h-full px-3 mt-8 md:w-1/6">
                    {% set criterias = bron.criteria %}
                    {% for criteria in criterias %}
                        {% if bron.criteria|length %}
                            <p class="inline-block px-4 py-2 text-xs font-bold uppercase bg-white rounded-3xl">{{ criteria.title }}</p>
                        {% endif %}
                    {% endfor %}
                </div>

                <div class="w-full h-full px-3 mt-8 md:w-1/6">
                    {% set domeinen = bron.domeinen %}
                    {% for domein in domeinen %}
                        {% if bron.domeinen|length %}
                            <p class="inline-block px-4 py-2 text-xs font-bold uppercase bg-white rounded-3xl">{{ domein.title }}</p>
                        {% endif %}
                    {% endfor %}
                </div>

                <div class="w-full h-full px-3 mt-8 md:w-1/6">
                    {% set talen = bron.languages %}
                    {% for taal in talen %}
                        {% if bron.languages|length %}
                            <a href="" class="inline-block px-4 py-2 text-xs font-bold text-white uppercase bg-primary rounded-3xl">{{ taal.title }}</a>
                        {% endif %}
                    {% endfor %}
                </div>

                <div class="w-full h-full px-3 mt-8 md:w-1/6">
                    <a class="btn btn--secondary btn--ext" href="{{ bron.url }}">{{ 'Meer info'|t }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

{% endblock %}
